/*
Find job postings from the first quatre that have a salalry greater than $70
- combine job postings tables from the first quatre of 2023 (Jan-Mar)
-Gets job postings with an average yearly salary > 70K
*/

SELECT 
     quatre_one_jobs.job_title_short,
     quatre_one_jobs.job_location,
     quatre_one_jobs.job_via,
     quatre_one_jobs.job_posted_date:: DATE,
     quatre_one_jobs.salary_year_avg
FROM (
      SELECT *
      FROM january_jobs
      UNION ALL
    SELECT *
    FROM febrauary_jobs
    UNION ALL
    SELECT  *
    FROM march_jobs
) AS quatre_one_jobs
WHERE quatre_one_jobs.salary_year_avg > 70000 AND 
 quatre_one_jobs.job_title_short = 'Data Analyst'
ORDER BY quatre_one_jobs.salary_year_avg DESC




--problem solved by myself--
-- Get the corresponding skill and skill type for each job posting on Q1
--Include those without skills
--Why? Look at the skills and type for each job in the first quatre that has a salary > $70K--

SELECT 
    quatre_one_skills.job_title_short,
    quatre_one_skills.salary_year_avg,
    quatre_one_skills.job_id,
    Skills.skills,
    Skills.type
FROM(
SELECT *
    FROM january_jobs
    UNION ALL
    SELECT *
    FROM febrauary_jobs
    UNION ALL
    SELECT  *
    FROM march_jobs
) AS quatre_one_skills
INNER JOIN Skills_job_dim AS Skills_job ON Skills_job.job_id =  quatre_one_skills.job_id
INNER JOIN Skills_dim As Skills ON Skills.skill_id = Skills_job.skill_id
WHERE quatre_one_skills.salary_year_avg > 70000 AND
quatre_one_skills.job_title_short = 'Data Analyst'
ORDER BY quatre_one_skills.salary_year_avg DESC


